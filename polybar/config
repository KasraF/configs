[bar/mybar]
font-0 = "FiraCode Nerd Font:style=Regular:size=13;1"
font-1 = "Font Awesome 5 Free:style=Regular:size=12;1"

background = #000
foreground = #839496

bottom = true
fixed-center = true

width = 100%
height = 30

tray-position = right
tray-padding  = 2
tray-maxsize  = 18

dpi-x = 90
dpi-y = 90

module-margin = 1
padding = 1

line-size = 2
line-color = #dc322f

# The Modules setup
modules-left = i3 title
modules-right = pulseaudio fs cpu memory wireless-network wired-network date services

[module/mpris]
type = custom/script
exec = ~/.config/polybar/scripts/mpris_tail.sh -f '{artist} - {title}'
tail = true
label-underline = #d33682

[module/fs]
type = internal/fs
mount-0 = /
mount-1 = /home
label-mounted = %mountpoint% %percentage_used%%

[module/services]
type = custom/script
exec = ~/.config/polybar/scripts/service_list.sh

[module/i3]
type = internal/i3
fuzzy-match = true
ws-icon-0 = web;-
ws-icon-1 = code;
ws-icon-2 = messag;
ws-icon-3 = mus;嗢
ws-icon-default = 

label-focused = %icon%
label-focused-padding   = 1
label-focused-underline = #dc322f

label-unfocused = %icon%
label-unfocused-padding = 1

label-visible = %icon%
label-visible-padding = 1
label-separator-foreground = #b58900

[module/pulseaudio]
type = internal/pulseaudio
format-volume = <ramp-volume> <label-volume>
label-muted   =  
ramp-volume-0 = 奄
ramp-volume-1 = 奔
ramp-volume-2 = 墳

[module/cpu]
type = internal/cpu
interval = 2
# " "
format-prefix = "cpu "
label = %percentage%%

[module/memory]
type = internal/memory
interval = 2
# " "
format-prefix = "mem "
label = %percentage_used%%

[module/date]
type = internal/date
interval = 5
date = "%a %d"
date-alt = %a %b %d
time = %I:%M
time-alt = %I:%M%p
label = %date% %time%
label-underline = #268bd2

[module/backlight]
type = internal/backlight
card = intel_backlight
format = <ramp> <label>
ramp-0 = 
ramp-1 = 
ramp-2 = 
ramp-3 = 
ramp-4 = 

[module/wired-network]
type = internal/network
interface = enp3s0
interval = 3.0
label-connected =  %local_ip%
label-disconnected = 
format-connected-underline = #859900
format-disconnected-underline = #859900

[module/wireless-network]
type = internal/network
interface = wlp5s0
interval = 3.0
label-connected = 直 %essid%
label-disconnected = 睊
format-connected-underline = #859900
format-disconnected-underline = #FF66

[module/title]
type = internal/xwindow
label = %title:0:30:...%
