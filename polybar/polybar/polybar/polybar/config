[bar/mybar]
monitor = "DP-0"

font-0 = "Iosevka Nerd Font:style=Regular:size=13;1"
font-1 = "Font Awesome 5 Free:style=Regular:size=12;1"


background = #000
foreground = #839496

bottom = true
fixed-center = true

width = 100%
height = 26

tray-position = right
tray-padding  = 2
tray-maxsize  = 18

#dpi-x = 90
#dpi-y = 90
pseudo-transparency = false

module-margin = 1
padding = 0

line-size = 2
line-color = #dc322f

# The Modules setup
modules-left = mpd i3 title
modules-right = pulseaudio cpu memory fs wireless-network wired-network date services

[module/mpris]
type = custom/script
exec = ~/.config/polybar/scripts/mpris_tail.sh -f '{artist} - {title}'
tail = true
label-underline = #d33682

[module/fs]
type = internal/fs
mount-0 = /
mount-1 = /home
label-mounted = %mountpoint% %percentage_used%%
format-mounted-underline = #586e75
format-unmounted-underline = #859900


[module/services]
type = custom/script
exec = ~/.config/polybar/scripts/service_list.sh

[module/i3]
type = internal/i3
fuzzy-match = true
ws-icon-0 = web;爵
ws-icon-1 = code;
ws-icon-2 = messag;
ws-icon-3 = mus;
ws-icon-default = 

label-focused = "%icon%"
label-focused-padding = 1
label-focused-underline = #dc322f

label-unfocused = %icon%
label-unfocused-padding = 1

label-visible = %icon%
label-visible-padding = 1
label-separator-foreground = #b58900

[module/mpd]
type = internal/mpd
host = 127.0.0.1
port = 6600
interval = 2
format-online = <icon-prev> <toggle> <icon-next>  <label-song>

format-online-underline = #FFFFFF

icon-play = 
icon-pause = 
icon-prev = 
icon-next = 

label-song = %title:0:16:..%

bar-progress-width = 10
bar-progress-indicator = >
bar-progress-fill = " "
bar-progress-empty = ─

[module/pulseaudio]
type = internal/pulseaudio
format-volume = <ramp-volume> <label-volume>
label-muted   =  
ramp-volume-0 = 奄
ramp-volume-1 = 奔
ramp-volume-2 = 墳

[module/cpu]
type = internal/cpu
interval = 2
# " "
format-prefix = "cpu "
label = %percentage%%

[module/memory]
type = internal/memory
interval = 2
# " "
format-prefix = "mem "
label = %percentage_used%%

[module/date]
type = internal/date
interval = 5
date = "%a %d"
date-alt = %a %b %d
time = %I:%M
time-alt = %I:%M%p
label = %date% %time%
label-underline = #268bd2

[module/backlight]
type = internal/backlight
card = intel_backlight
format = <ramp> <label>
ramp-0 = 
ramp-1 = 
ramp-2 = 
ramp-3 = 
ramp-4 = 

[module/wired-network]
type = internal/network
interface = enp4s0
interval = 3.0
label-connected =  %local_ip%
label-disconnected = 
format-connected-underline = #859900
format-disconnected-underline = #859900

[module/wireless-network]
type = internal/network
interface = wlp6s0
interval = 3.0
label-connected = 直 %essid%
label-disconnected = "睊 "
